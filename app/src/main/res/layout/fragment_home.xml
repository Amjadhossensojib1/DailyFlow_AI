<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:background="@color/black">
    <TextView
        android:id="@+id/tv_aititle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Speaking to DailyFlow Ai"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tv_aidescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go a head.I'm lestening"
        app:layout_constraintTop_toBottomOf="@+id/tv_aititle"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/text_color"/>

    <ImageView
        android:id="@+id/iv_aiicon"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/ai_voice"
        app:layout_constraintTop_toBottomOf="@+id/tv_aidescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tv_aititle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_aiicon"
        android:text="What is digital abstract design and find 3 example of abstract design"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       app:layout_constraintTop_toBottomOf="@+id/tv_aititle2">
       <ImageView
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="80dp"
           android:layout_gravity="center_vertical"
           android:src="@drawable/keyboard"
           app:layout_constraintTop_toBottomOf="@+id/tv_aititle2"
           app:layout_constraintStart_toStartOf="parent"/>
       <ImageView
           android:layout_width="0dp"
           android:layout_weight="2"
           android:layout_height="wrap_content"
           android:src="@drawable/microphone"
           app:layout_constraintTop_toBottomOf="@+id/tv_aititle2"
           app:layout_constraintStart_toStartOf="parent"/>
       <ImageView
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="80dp"
           android:layout_gravity="center_vertical"
           android:src="@drawable/crosss"
           app:layout_constraintTop_toBottomOf="@+id/tv_aititle2"
           app:layout_constraintStart_toStartOf="parent"/>
   </LinearLayout>


 </androidx.constraintlayout.widget.ConstraintLayout>