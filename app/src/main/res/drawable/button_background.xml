<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow/shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#C2185B"/>
            <corners android:radius="60dp"/>
        </shape>
    </item>

    <!-- Main button -->
    <item
        android:top="2dp"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF4081"
                android:centerColor="#E91E63"
                android:endColor="#880E4F"
                android:angle="90"
                android:type="linear"/>
            <corners android:radius="58dp"/>
            <stroke
                android:width="1dp"
                android:color="#F06292"/>
        </shape>
    </item>
</layer-list>